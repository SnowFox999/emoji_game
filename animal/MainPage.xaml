<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="animal.MainPage">

    <ScrollView>
        <VerticalStackLayout 
            Padding="30,0"
            Spacing="25">
            
            <Button x:Name="PlayAgainButton" Text="Play Again?" FontSize="Large" Clicked="PlayAgainButton_Clicked" />

            <FlexLayout x:Name="AnimalButtons" MaximumWidthRequest="400" Wrap="Wrap" IsVisible="false">
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightBlue" BorderColor="#FF272763" BorderWidth="1" Clicked="Button_Clicked" />
            </FlexLayout>

            <Label x:Name="TimeElapsed" Text="Time Elapsed: 0.0 seconds" FontSize="Large"/>
            <Label x:Name="BestScore" Text="Best score: 0.0 seconds" FontSize="Large"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
